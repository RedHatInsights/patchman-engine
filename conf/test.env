GIN_MODE=release
LOG_LEVEL=DEBUG

USE_TESTING_DB=on

DB_HOST=db
DB_PORT=5432
DB_USER=admin
DB_PASSWD=passwd
DB_NAME=patchman
DB_SSLMODE=verify-full
DB_SSLROOTCERT=/opt/postgresql/pgca.crt

VMAAS_ADDRESS=http://platform:9001
RBAC_ADDRESS=http://platform:9001
ENTITLEMENTS_ADDRESS=http://platform:9001
CONSUMER_COUNT=8

KAFKA_ADDRESS=kafka:9093
KAFKA_GROUP=patchman
ENABLE_KAFKA_SSL=true
KAFKA_SSL_SKIP_VERIFY=false
KAFKA_SSL_CERT=/opt/kafka/ca.crt
EVENTS_TOPIC=platform.inventory.events
EVAL_TOPIC=patchman.evaluator.upload
PAYLOAD_TRACKER_TOPIC=platform.payload-status
EVAL_LABEL=upload
NOTIFICATIONS_TOPIC=platform.notifications.ingress

PUBLIC_PORT=8082

ENABLE_REPO_BASED_RE_EVALUATION=true
ENABLE_CYNDI_TAGS=true

ENABLE_BASELINE_CHANGE_EVAL=false

MAX_EVAL_GOROUTINES=1

UPDATE_USERS=true
UPDATE_DB_CONFIG=true
SCHEMA_MIGRATION=-1
# don't retry vmaas calls forever
VMAAS_CALL_MAX_RETRIES=100
